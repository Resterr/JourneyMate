{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Debug",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.txt",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "SqlServer": "Server=(localdb)\\mssqllocaldb;Database=JourneyMate;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "Auth": {
    "Issuer": "journeyMate-issuer",
    "Audience": "journeyMate-audience",
    "SigningKey": "my custom secret key",
    "AccessTokenExpiry": "00.01:00:00",
    "RefreshTokenExpiry": "01.00:00:00"
  },
  "SuperAdminAccount": {
    "Email": "superadmin@mail.com",
    "Password": "superadminpassword",
    "UserName": "superadmin"
  },
  "ApiUrls": {
    "GoogleMapsApiUrl": "https://maps.googleapis.com/maps/api"
  },
  "ApiKeys": {
    "GooglePlacesApiKey": "key"
  },
  "Cors": {
    "AllowedOrigins": "*",
    "AllowedMethods": "*",
    "AllowedHeaders": "*"
  }
}
